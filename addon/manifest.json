{
    "manifest_version": 2,
    "name": "Download all PDFs",
    "version": "1.0.0",
    "description": "Downloads all PDF hyperlinks on a webpage.",
    "icons": {
        "32": "icons/aoc-to-markdown.svg"
    },
    "page_action": {
        "default_icon": "icons/aoc-to-markdown.svg",
        "default_title": "Download all PDFs"
    },
    "background": {
        "scripts": ["background_scripts/index.js"]
    },
    "permissions": [
        "activeTab",
        "tabs",
        "downloads"
    ]
}
