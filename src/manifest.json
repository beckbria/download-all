{
    "manifest_version": 2,
    "name": "Download All",
    "version": "1.0.0",
    "description": "Downloads all hyperlinks on a webpage.",
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "64": "icons/icon64.png",
        "128": "icons/icon128.png",
        "256": "icons/icon256.png"
    },
    "page_action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "64": "icons/icon64.png",
            "128": "icons/icon128.png",
            "256": "icons/icon256.png"
        },
        "default_title": "Download all PDFs"
    },
    "background": {
        "scripts": ["background_scripts/index.js"]
    },
    "permissions": [
        "activeTab",
        "tabs",
        "downloads",
        "storage"
    ]
}
